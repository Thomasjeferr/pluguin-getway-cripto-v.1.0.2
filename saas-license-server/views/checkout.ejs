<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout - Plugin Cripto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #0d1117;
            color: #c9d1d9;
            font-family: 'Inter', sans-serif;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .checkout-card {
            background-color: #161b22;
            border: 1px solid #30363d;
            border-radius: 12px;
            padding: 2rem;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 8px 24px rgba(0,0,0,0.5);
        }
        .form-control {
            background-color: #0d1117;
            border: 1px solid #30363d;
            color: #fff;
        }
        .form-control:focus {
            background-color: #0d1117;
            border-color: #F0B90B;
            color: #fff;
            box-shadow: 0 0 0 2px rgba(240, 185, 11, 0.2);
        }
        .btn-pay {
            background-color: #F0B90B;
            color: #000;
            font-weight: 600;
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 6px;
        }
        .btn-pay:hover {
            background-color: #d4a40a;
        }
        .summary-box {
            background-color: #0d1117;
            border: 1px solid #30363d;
            border-radius: 8px;
            padding: 15px;
        }
        .total-row {
            border-top: 1px solid #30363d;
            margin-top: 10px;
            padding-top: 10px;
        }
    </style>
</head>
<body>

    <div class="checkout-card">
        
        <!-- Cabeçalho Dinâmico -->
        <div class="text-center mb-4">
            <% 
                // Proteção contra erro: Se 'plan' não existir, cria um padrão
                var currentPlan = (typeof plan !== 'undefined') ? plan : { id: 'trial', name: 'Teste Grátis', price: 0, period: '7 dias' };
            %>

            <% if (currentPlan.price > 0) { %>
                <i class="fas fa-credit-card fa-3x text-success mb-3"></i>
                <h4>Pagamento Seguro</h4>
                <p class="text-secondary small">Finalize sua assinatura <%= currentPlan.name %>.</p>
            <% } else { %>
                <i class="fas fa-rocket fa-3x text-warning mb-3"></i>
                <h4>Criar Conta Grátis</h4>
                <p class="text-secondary small">Teste por 7 dias sem compromisso.</p>
            <% } %>
        </div>

        <form action="<%= currentPlan.price > 0 ? '/create-checkout-session' : '/process-checkout' %>" method="POST">
            <input type="hidden" name="planId" value="<%= currentPlan.id %>">

            <div class="mb-3">
                <label class="form-label text-secondary small">Email</label>
                <input type="email" name="email" class="form-control" placeholder="seu@email.com" required>
            </div>
            
            <div class="mb-4">
                <label class="form-label text-secondary small">Senha</label>
                <input type="password" name="password" class="form-control" placeholder="******" required>
            </div>

            <!-- Resumo do Pedido -->
            <div class="summary-box mb-4">
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-secondary"><%= currentPlan.name %></span>
                    <span class="text-white">R$ <%= currentPlan.price.toFixed(2).replace('.', ',') %></span>
                </div>
                
                <% if (currentPlan.price > 0) { %>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-secondary">Taxa de Setup</span>
                        <span class="text-success">Grátis</span>
                    </div>
                <% } %>

                <div class="d-flex justify-content-between total-row">
                    <span class="fw-bold text-white">Total a Pagar</span>
                    <span class="fw-bold <%= currentPlan.price > 0 ? 'text-success' : 'text-warning' %>">
                        R$ <%= currentPlan.price.toFixed(2).replace('.', ',') %>
                        <small class="fw-normal text-muted">/<%= currentPlan.period %></small>
                    </span>
                </div>
            </div>

            <!-- Botão Dinâmico -->
            <button type="submit" class="btn btn-pay">
                <% if (currentPlan.price > 0) { %>
                    <i class="fas fa-lock me-2"></i> Pagar via Pix
                <% } else { %>
                    <i class="fas fa-check-circle me-2"></i> Confirmar e Testar
                <% } %>
            </button>
            
            <div class="text-center mt-3">
                <a href="/" class="text-secondary small text-decoration-none">Cancelar</a>
            </div>
        </form>
    </div>

</body>
</html>
