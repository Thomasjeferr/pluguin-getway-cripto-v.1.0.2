<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendas - Painel Administrativo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    
    <%- include('partials/admin-layout-styles') %>
    
    <style>

        /* Estilos específicos para página de vendas */

        .content-card {
            background: linear-gradient(135deg, rgba(19, 23, 34, 0.9) 0%, rgba(26, 31, 46, 0.9) 100%);
            border: 1px solid rgba(30, 37, 50, 0.6);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
        }

        .stat-card {
            background: linear-gradient(135deg, rgba(19, 23, 34, 0.9) 0%, rgba(26, 31, 46, 0.9) 100%);
            border: 1px solid rgba(30, 37, 50, 0.6);
            border-radius: 16px;
            padding: 1.75rem;
            margin-bottom: 1.5rem;
        }

        .stat-value {
            font-size: 2.25rem;
            font-weight: 700;
            color: var(--primary);
        }

        .stat-label {
            font-size: 0.8rem;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .table {
            color: var(--text-primary);
        }

        .table thead th {
            border-bottom: 2px solid rgba(30, 37, 50, 0.6);
            color: var(--text-secondary);
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 1px;
        }

        .table tbody tr {
            border-bottom: 1px solid rgba(30, 37, 50, 0.3);
        }

        .table tbody tr:hover {
            background: rgba(99, 102, 241, 0.05);
        }

        .badge {
            padding: 0.4rem 0.8rem;
            border-radius: 6px;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="admin-layout">
        <%- include('partials/admin-sidebar', { currentPage: 'vendas', notifications: typeof notifications !== 'undefined' ? notifications : { totalUnread: 0 } }) %>
        
        <div class="main-content">
            <nav class="top-navbar">
                <div class="d-flex justify-content-between align-items-center">
                    <button class="menu-toggle" onclick="document.querySelector('.sidebar').classList.toggle('open')">
                        <i class="fa-solid fa-bars"></i>
                    </button>
                    <h4 class="mb-0">
                        <i class="fa-solid fa-cart-shopping me-2" style="color: var(--primary);"></i>
                        Relatório de Vendas
                    </h4>
                    <div></div>
                </div>
            </nav>

    <div class="container" style="padding: 2rem;">
        <!-- Estatísticas -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-label">Receita Total</div>
                    <div class="stat-value">R$ <%= (stats && stats.totalRevenue) ? stats.totalRevenue.toFixed(2).replace('.', ',') : '0,00' %></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-label">Licenças Pagas</div>
                    <div class="stat-value"><%= (stats && typeof stats.totalPaidLicenses !== 'undefined') ? stats.totalPaidLicenses : 0 %></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-label">Planos Mensais</div>
                    <div class="stat-value"><%= (stats && typeof stats.monthlyCount !== 'undefined') ? stats.monthlyCount : 0 %></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-label">Planos Anuais</div>
                    <div class="stat-value"><%= (stats && typeof stats.yearlyCount !== 'undefined') ? stats.yearlyCount : 0 %></div>
                </div>
            </div>
        </div>

        <!-- Lista de Vendas -->
        <div class="content-card">
            <h5 class="mb-4">
                <i class="fa-solid fa-list me-2"></i>Licenças Pagas
            </h5>
            
            <% if (typeof paidLicenses === 'undefined' || !paidLicenses || paidLicenses.length === 0) { %>
                <div class="text-center py-5">
                    <i class="fa-solid fa-inbox fa-3x mb-3" style="opacity: 0.3;"></i>
                    <p class="text-secondary">Nenhuma venda registrada ainda.</p>
                </div>
            <% } else { %>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Cliente</th>
                                <th>Produto</th>
                                <th>Plano</th>
                                <th>Valor</th>
                                <th>Data</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% paidLicenses.forEach(function(license) { %>
                                <tr>
                                    <td><%= license.email %></td>
                                    <td>
                                        <% if (license.productId && typeof license.productId === 'object' && license.productId.name) { %>
                                            <span class="badge bg-info"><%= license.productId.name %></span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">Padrão</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <span class="badge <%= license.plan === 'monthly' ? 'bg-primary' : 'bg-success' %>">
                                            <%= license.plan === 'monthly' ? 'Mensal' : 'Anual' %>
                                        </span>
                                    </td>
                                    <td>
                                        <strong>
                                            R$ <%= license.plan === 'monthly' ? '97,00' : '997,00' %>
                                        </strong>
                                    </td>
                                    <td>
                                        <%= new Date(license.createdAt).toLocaleDateString('pt-BR') %>
                                    </td>
                                    <td>
                                        <% if (license.active) { %>
                                            <span class="badge bg-success">Ativo</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Inativo</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
