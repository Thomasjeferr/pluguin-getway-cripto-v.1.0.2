                                alert('Erro: ' + data.error);
                                btn.disabled = false;
                                btn.innerHTML = '<span>Ir para Pagamento</span><i class="fas fa-lock"></i>';
                                return;
                            }

                            // Redirecionar para Stripe Checkout
