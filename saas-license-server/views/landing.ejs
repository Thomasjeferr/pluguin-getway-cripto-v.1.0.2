    <!-- Script para garantir que openCheckout esteja disponível globalmente -->
    <script>
        // Configurações vindas do servidor (serão atualizadas após o DOM carregar)
        let prices = {
            monthly: <%= config.priceMonthly || 97 %>,
            yearly: <%= config.priceYearly || 997 %>
        };

        // Função openCheckout definida no head para garantir disponibilidade global
        window.openCheckout = function openCheckout(planType) {
            try {
                // Verificar se Bootstrap está carregado
                if (typeof bootstrap === 'undefined') {
                    console.error('Bootstrap não está carregado! Aguardando...');
                    // Tentar novamente após um pequeno delay
                    setTimeout(function() {
                        if (typeof bootstrap !== 'undefined') {
                            window.openCheckout(planType);
                        } else {
                            alert('Erro: Bootstrap não está disponível. Por favor, recarregue a página.');
                        }
                    }, 100);
                    return;
                }

                const modalElement = document.getElementById('checkoutModal');
                if (!modalElement) {
                    console.error('Modal checkoutModal não encontrado!');
                    alert('Erro: Modal não encontrado. Por favor, recarregue a página.');
                    return;
                }

                const modal = new bootstrap.Modal(modalElement);
                const form = document.getElementById('checkoutForm');
                const title = document.getElementById('modalTitle');
                const planIdInput = document.getElementById('planIdInput');
                const btn = document.getElementById('checkoutBtn');
                
                if (!form || !title || !planIdInput || !btn) {
                    console.error('Elementos do modal não encontrados!');
                    alert('Erro: Elementos do modal não encontrados. Por favor, recarregue a página.');
                    return;
                }
                
                // Elementos de visualização
                const trialContent = document.getElementById('trialContent');
                const paidContent = document.getElementById('paidContent');
                const paidName = document.getElementById('paidPlanName');
                const paidPrice = document.getElementById('paidPlanPrice');
                const paidTotal = document.getElementById('paidPlanTotal');

                planIdInput.value = planType;

                if (planType === 'trial') {
                    title.innerText = "Criar Conta Grátis";
                    if (trialContent) trialContent.style.display = 'block';
                    if (paidContent) paidContent.style.display = 'none';
                    
                    form.action = "/process-checkout";
                    btn.innerHTML = '<span>Começar Teste Agora</span><i class="fas fa-rocket"></i>';
                    btn.className = "modern-btn-primary modern-btn-success";
                    
                    // Remover handler de submit anterior se existir
                    form.onsubmit = null;
                } 
                else {
                    title.innerText = "Checkout Seguro";
                    if (trialContent) trialContent.style.display = 'none';
                    if (paidContent) paidContent.style.display = 'block';
                    
                    let price = 0;
                    let name = "";
                    
                    if (planType === 'monthly') {
                        price = prices.monthly;
                        name = "Assinatura Mensal";
                    } else {
                        price = prices.yearly;
                        name = "Assinatura Anual";
                    }

                    const priceFmt = "R$ " + price.toFixed(2).replace('.', ',');
                    if (paidName) paidName.innerText = name;
                    if (paidPrice) paidPrice.innerText = priceFmt;
                    if (paidTotal) paidTotal.innerText = priceFmt;

                    btn.innerHTML = '<span>Ir para Pagamento</span><i class="fas fa-lock"></i>';
                    btn.className = "modern-btn-primary";
                    
                    // Interceptar submit para criar sessão Stripe
                    form.onsubmit = async function(e) {
                        e.preventDefault();
                        btn.disabled = true;
                        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i><span>Processando...</span>';
                        
                        const formData = new FormData(form);
                        const email = formData.get('email');
                        const password = formData.get('password');
                        
                        try {
                            const response = await fetch('/create-checkout-session', {
