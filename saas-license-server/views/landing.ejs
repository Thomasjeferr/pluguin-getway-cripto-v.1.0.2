            filter: grayscale(0);
        }

        /* ===== INPUTS MODERNOS ===== */
        .modern-input-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .modern-input-label {
            display: block;
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
            letter-spacing: 0.3px;
        }

        .modern-input-wrapper {
