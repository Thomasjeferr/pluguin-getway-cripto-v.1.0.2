    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>
    
    <script>
        // Atualizar preços quando o DOM carregar (valores vindos do servidor)
        document.addEventListener('DOMContentLoaded', function() {
            prices.monthly = <%= config.priceMonthly %>;
            prices.yearly = <%= config.priceYearly %>;
            
            // Inicializar protótipo do checkout
            initCheckoutPrototype();
        });

        // ============================================
        // PROTÓTIPO FUNCIONAL DO CHECKOUT
        // Baseado no design real do plugin
        // ============================================
        
        let paymentSimulated = false;
        let demoPixCode = '00020126580014BR.GOV.BCB.PIX0136123e4567-e89b-12d3-a456-426614174000520400005303986540597.005802BR5925EMPRESA EXEMPLO LTDA6009SAO PAULO62070503***6304';

        function initCheckoutPrototype() {
            // QR Code será gerado quando o modal abrir
        }

        let isModalOpening = false;

        function showPaymentModal() {
            // Prevenir múltiplas chamadas simultâneas
            if (isModalOpening) {
                return;
            }
            
            const modal = document.getElementById('binance-modal-demo');
            const checkout = document.getElementById('woocommerce-checkout-demo');
            
            if (!modal) {
                console.error('Modal não encontrado!');
                return;
            }
            
            if (!checkout) {
                console.error('Checkout não encontrado!');
                return;
            }
            
            isModalOpening = true;
            
            // Primeiro ocultar checkout
            checkout.style.display = 'none';
            
            // Forçar reflow para garantir que o display seja aplicado
            void modal.offsetHeight;
            
            // Mostrar modal (display: flex)
            modal.style.display = 'flex';
            
            // Forçar reflow novamente
            void modal.offsetHeight;
            
            // Aguardar um frame para aplicar a classe show
            requestAnimationFrame(function() {
                // Adicionar classe show para animação
                modal.classList.add('show');
                
                // Resetar flag após animação
                setTimeout(function() {
                    isModalOpening = false;
                }, 300);
                
                // Gerar QR Code automaticamente
                const container = document.getElementById('binance-qr-container-demo');
                
                if (container) {
                    // Limpar e criar novo canvas de forma segura
                    container.textContent = '';
                    const canvas = document.createElement('canvas');
                    canvas.id = 'qrcodeCanvas';
                    container.appendChild(canvas);
                    
                    // Aguardar um pouco para garantir que o canvas foi criado
                    setTimeout(function() {
                        const canvas = document.getElementById('qrcodeCanvas');
                        
                        if (canvas && typeof QRCode !== 'undefined') {
                            QRCode.toCanvas(canvas, demoPixCode, {
                                width: 160,
                                margin: 2,
                                color: {
                                    dark: '#000000',
                                    light: '#FFFFFF'
                                }
                            }, function (error) {
                                if (error) {
                                    console.error('Erro ao gerar QR Code:', error);
                                    // Criar div de erro de forma segura
                                    container.textContent = '';
                                    const errorDiv = document.createElement('div');
                                    errorDiv.style.cssText = 'width: 160px; height: 160px; background: #f0f0f0; border: 2px solid #ddd; border-radius: 4px; display: flex; align-items: center; justify-content: center; color: #999; font-size: 11px;';
                                    errorDiv.textContent = 'QR Code';
                                    container.appendChild(errorDiv);
                                }
                            });
                        } else {
                            // Fallback se QRCode não estiver disponível - criar de forma segura
                            container.textContent = '';
                            const fallbackDiv = document.createElement('div');
                            fallbackDiv.style.cssText = 'width: 160px; height: 160px; background: #f0f0f0; border: 2px solid #ddd; border-radius: 4px; display: flex; align-items: center; justify-content: center; color: #999; font-size: 11px;';
                            fallbackDiv.textContent = 'QR Code';
                            container.appendChild(fallbackDiv);
                        }
                    }, 200);
                }
            });
        }

        function closePaymentModal() {
            const modal = document.getElementById('binance-modal-demo');
            const checkout = document.getElementById('woocommerce-checkout-demo');
            
            if (modal) {
                // Remover classe show primeiro
                modal.classList.remove('show');
                
                // Aguardar animação terminar antes de esconder completamente
                setTimeout(function() {
                    modal.style.display = 'none';
                    isModalOpening = false;
                }, 300);
            }
            
            if (checkout) {
                checkout.style.display = 'block';
            }
            
            // Resetar status
            resetCheckoutPrototype();
        }

        function simulatePayment() {
            if (paymentSimulated) return;

            const btnSimulate = document.getElementById('btnSimulate');
            const qrStatus = document.getElementById('qr-status-demo');
            const copySuccess = document.getElementById('copy-success-demo');

            if (!btnSimulate || !qrStatus) return;

            btnSimulate.disabled = true;
            btnSimulate.textContent = '⏳ Processando...';
            paymentSimulated = true;

            // Fase 1: Aguardando (já está visível)
            qrStatus.className = 'qr-status-demo checking-demo';
            qrStatus.textContent = '⏳ Aguardando confirmação do pagamento...';

            // Fase 2: Processando (após 2 segundos)
            setTimeout(function() {
                qrStatus.className = 'qr-status-demo processing-demo';
                qrStatus.textContent = '🔄 Processando pagamento...';
                
                // Fase 3: Sucesso (após mais 3 segundos)
                setTimeout(function() {
                    qrStatus.className = 'qr-status-demo paid-demo';
                    qrStatus.textContent = '✅ Pagamento confirmado! Redirecionando...';
                    
                    // Resetar após 4 segundos
                    setTimeout(function() {
                        resetCheckoutPrototype();
                    }, 4000);
                }, 3000);
            }, 2000);
        }

        function resetCheckoutPrototype() {
            paymentSimulated = false;
            
            // Fechar modal e mostrar checkout
            const modal = document.getElementById('binance-modal-demo');
            const checkout = document.getElementById('woocommerce-checkout-demo');
            
            if (modal) {
                modal.classList.remove('show');
                setTimeout(function() {
                    modal.style.display = 'none';
                }, 300);
            }
            
            if (checkout) {
                checkout.style.display = 'block';
            }
            
            // Resetar elementos do modal
            const btnSimulate = document.getElementById('btnSimulate');
            const qrStatus = document.getElementById('qr-status-demo');
            const copySuccess = document.getElementById('copy-success-demo');
            const copyBtn = document.getElementById('copy-pix-btn-demo');

            if (btnSimulate) {
                btnSimulate.disabled = false;
                btnSimulate.textContent = '▶ Simular Pagamento';
            }

            if (qrStatus) {
                qrStatus.className = 'qr-status-demo checking-demo';
                qrStatus.textContent = '⏳ Aguardando confirmação do pagamento...';
            }

            if (copySuccess) {
                copySuccess.style.display = 'none';
            }

            if (copyBtn) {
                copyBtn.classList.remove('copied');
                copyBtn.textContent = '📋 Copiar Código Pix';
            }
        }

        function copyPixCode() {
            navigator.clipboard.writeText(demoPixCode).then(function() {
                const copyBtn = document.getElementById('copy-pix-btn-demo');
                const copySuccess = document.getElementById('copy-success-demo');
                
                if (copyBtn) {
                    copyBtn.classList.add('copied');
                    copyBtn.textContent = '✅ Código Copiado!';
                    
                    setTimeout(function() {
                        copyBtn.classList.remove('copied');
                        copyBtn.textContent = '📋 Copiar Código Pix';
                    }, 2000);
                }
                
                if (copySuccess) {
                    copySuccess.style.display = 'block';
                    setTimeout(function() {
                        copySuccess.style.display = 'none';
                    }, 3000);
                }
            }).catch(function(err) {
                console.error('Erro ao copiar:', err);
                alert('Erro ao copiar código. Tente selecionar manualmente.');
            });
        }
    </script>
