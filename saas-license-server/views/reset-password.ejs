<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redefinir Senha - Plugin Cripto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #0d1117;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        .login-card {
            background-color: #161b22;
            padding: 40px;
            border-radius: 6px;
            width: 100%;
            max-width: 420px;
            border: 1px solid #30363d;
            box-shadow: 0 8px 24px rgba(0,0,0,0.5);
        }

        .brand-logo {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .brand-icon {
            font-size: 2.5rem;
            color: #F0B90B;
            margin-bottom: 15px;
        }

        .brand-title {
            color: #c9d1d9;
            font-size: 1.2rem;
            font-weight: 500;
        }

        .form-control {
            background-color: #0d1117 !important;
            border: 1px solid #30363d;
            color: #c9d1d9 !important;
            height: 45px;
            border-radius: 6px;
            padding-left: 40px;
            font-size: 14px;
        }

        .form-control:focus {
            border-color: #58a6ff;
            box-shadow: 0 0 0 3px rgba(88, 166, 255, 0.1);
        }

        .form-control::placeholder {
            color: #8b949e;
        }

        .input-icon {
            position: absolute;
            left: 14px;
            top: 14px;
            color: #8b949e;
            font-size: 14px;
            z-index: 4;
        }

        .btn-submit {
            background-color: #F0B90B;
            border: 1px solid rgba(240, 185, 11, 0.5);
            color: #000;
            font-weight: 600;
            padding: 10px;
            width: 100%;
            margin-top: 10px;
            border-radius: 6px;
            font-size: 14px;
            transition: all 0.2s;
        }

        .btn-submit:hover {
            background-color: #e5b00a;
        }

        .btn-link {
            background: transparent;
            border: none;
            color: #58a6ff;
            text-decoration: none;
            font-size: 13px;
            padding: 0;
            margin-top: 15px;
            display: block;
            text-align: center;
        }

        .btn-link:hover {
            color: #79c0ff;
            text-decoration: underline;
        }

        .alert {
            background: rgba(248, 81, 73, 0.1);
            border: 1px solid rgba(248, 81, 73, 0.4);
            color: #ff7b72;
            padding: 10px;
            font-size: 13px;
            border-radius: 6px;
            margin-bottom: 20px;
        }

        .info-text {
            color: #8b949e;
            font-size: 12px;
            margin-top: 5px;
        }

        .password-strength {
            margin-top: 5px;
            font-size: 11px;
        }

        .strength-weak { color: #ff7b72; }
        .strength-medium { color: #d29922; }
        .strength-strong { color: #3fb950; }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="brand-logo">
            <div class="brand-icon">
                <i class="fa-solid fa-lock"></i>
            </div>
            <div class="brand-title">Redefinir Senha</div>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert">
                <i class="fas fa-exclamation-circle me-2"></i><%= error %>
            </div>
        <% } %>

        <% if (typeof token !== 'undefined' && token) { %>
            <p class="info-text" style="text-align: center; margin-bottom: 20px;">Digite sua nova senha abaixo.</p>

            <form action="/resetar-senha" method="POST" id="resetForm">
                <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <% } %>
                <input type="hidden" name="token" value="<%= token %>">
                
                <div class="position-relative mb-3">
                    <input type="password" name="password" id="password" class="form-control ps-5" placeholder="Nova senha" required minlength="6">
                    <i class="fas fa-lock input-icon"></i>
                    <div class="password-strength" id="passwordStrength"></div>
                    <div class="info-text">Mínimo 6 caracteres</div>
                </div>
                
                <div class="position-relative mb-4">
                    <input type="password" name="confirmPassword" id="confirmPassword" class="form-control ps-5" placeholder="Confirmar nova senha" required minlength="6">
                    <i class="fas fa-lock input-icon"></i>
                    <div class="info-text" id="passwordMatch" style="display: none; color: #ff7b72;">As senhas não coincidem</div>
                </div>
                
                <button type="submit" class="btn btn-submit">
                    <i class="fas fa-check me-2"></i>Redefinir Senha
                </button>
            </form>

            <a href="/acesso-admin" class="btn-link">
                <i class="fas fa-arrow-left me-1"></i>Voltar para o login
            </a>

            <script>
                const password = document.getElementById('password');
                const confirmPassword = document.getElementById('confirmPassword');
                const passwordStrength = document.getElementById('passwordStrength');
                const passwordMatch = document.getElementById('passwordMatch');
                const form = document.getElementById('resetForm');

                function checkPasswordStrength(pwd) {
                    if (pwd.length === 0) {
                        passwordStrength.textContent = '';
                        return;
                    }
                    let strength = 0;
                    if (pwd.length >= 6) strength++;
                    if (pwd.length >= 8) strength++;
                    if (/[a-z]/.test(pwd)) strength++;
                    if (/[A-Z]/.test(pwd)) strength++;
                    if (/\d/.test(pwd)) strength++;
                    if (/[^a-zA-Z\d]/.test(pwd)) strength++;

                    if (strength <= 2) {
                        passwordStrength.textContent = 'Senha fraca';
                        passwordStrength.className = 'password-strength strength-weak';
                    } else if (strength <= 4) {
                        passwordStrength.textContent = 'Senha média';
                        passwordStrength.className = 'password-strength strength-medium';
                    } else {
                        passwordStrength.textContent = 'Senha forte';
                        passwordStrength.className = 'password-strength strength-strong';
                    }
                }

                password.addEventListener('input', () => {
                    checkPasswordStrength(password.value);
                    if (confirmPassword.value) {
                        if (password.value !== confirmPassword.value) {
                            passwordMatch.style.display = 'block';
                        } else {
                            passwordMatch.style.display = 'none';
                        }
                    }
                });

                confirmPassword.addEventListener('input', () => {
                    if (password.value !== confirmPassword.value) {
                        passwordMatch.style.display = 'block';
                    } else {
                        passwordMatch.style.display = 'none';
                    }
                });

                form.addEventListener('submit', (e) => {
                    if (password.value !== confirmPassword.value) {
                        e.preventDefault();
                        alert('As senhas não coincidem!');
                        return false;
                    }
                    if (password.value.length < 6) {
                        e.preventDefault();
                        alert('A senha deve ter pelo menos 6 caracteres!');
                        return false;
                    }
                });
            </script>
        <% } else { %>
            <div class="alert">
                <i class="fas fa-exclamation-circle me-2"></i>Token inválido ou expirado.
            </div>
            <a href="/esqueci-senha" class="btn-link">
                <i class="fas fa-arrow-left me-1"></i>Solicitar novo link
            </a>
        <% } %>
    </div>

</body>
</html>
