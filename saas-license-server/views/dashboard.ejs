        function initModalFunctions() {
            // Verificar se Bootstrap está disponível
            if (typeof bootstrap === 'undefined' || typeof bootstrap.Modal === 'undefined') {
                console.warn('⚠️ Bootstrap ainda não está carregado, aguardando...');
                setTimeout(initModalFunctions, 100);
                return;
            }
            
            console.log('✅ Bootstrap carregado, definindo funções do modal');
            
            // FUNÇÃO PARA ABRIR MODAL - VERSÃO SIMPLIFICADA
            window.openNewClientModal = function() {
                try {
                    console.log('🔍 Tentando abrir modal...');
                    const modalElement = document.getElementById('newClientModal');
                    if (!modalElement) {
                        console.error('❌ Modal newClientModal não encontrado!');
                        alert('Erro: Modal não encontrado. Recarregue a página.');
                        return;
                    }
                    
                    // Verificar se Bootstrap está disponível
                    if (typeof bootstrap === 'undefined' || typeof bootstrap.Modal === 'undefined') {
                        console.error('❌ Bootstrap não está carregado!');
                        alert('Erro: Bootstrap não está disponível. Recarregue a página.');
                        return;
                    }
                    
                    console.log('✅ Modal encontrado, Bootstrap disponível');
                    
                    // Método 1: Tentar usar Bootstrap Modal API
                    try {
                        let bsModal = bootstrap.Modal.getInstance(modalElement);
                        if (!bsModal) {
                            console.log('📦 Criando nova instância do modal Bootstrap...');
                            bsModal = new bootstrap.Modal(modalElement, {
                                backdrop: true,
                                keyboard: true,
                                focus: true
                            });
                        }
                        
                        if (bsModal && typeof bsModal.show === 'function') {
                            bsModal.show();
                    // Ocultar área de resultado do diagnóstico ao abrir o modal
                    const diagnosticResult = document.getElementById('diagnosticResult');
                    if (diagnosticResult) {
                        diagnosticResult.style.display = 'none';
                    }
                    // Garantir que o listener do botão de diagnóstico está anexado
                    setTimeout(() => {
                        setupDiagnosticButton();
                    }, 100);
                    console.log('✅ Modal aberto com Bootstrap API!');
                    return;
                        }
                    } catch (bsError) {
                        console.warn('⚠️ Erro ao usar Bootstrap API:', bsError);
                    }
                    
                    // Método 2: Fallback - Manipulação direta do DOM
                    console.log('📦 Usando fallback manual para abrir modal...');
                    modalElement.classList.add('show');
                    modalElement.style.display = 'block';
                    modalElement.setAttribute('aria-hidden', 'false');
                    modalElement.removeAttribute('aria-hidden');
                    document.body.classList.add('modal-open');
                    document.body.style.overflow = 'hidden';
                    
                    // Criar backdrop manualmente
                    let backdrop = document.getElementById('modalBackdrop');
                    if (!backdrop) {
                        backdrop = document.createElement('div');
                        backdrop.className = 'modal-backdrop fade show';
                        backdrop.id = 'modalBackdrop';
                        document.body.appendChild(backdrop);
                    }
                    
                    // Adicionar evento para fechar ao clicar no backdrop
                    backdrop.addEventListener('click', function() {
                        window.closeNewClientModal();
                    });
                    
                    // Ocultar área de resultado do diagnóstico ao abrir o modal
                    const diagnosticResult = document.getElementById('diagnosticResult');
                    if (diagnosticResult) {
                        diagnosticResult.style.display = 'none';
