                    setTimeout(() => {
                        setupDiagnosticButton();
                    }, 100);
                    
                    console.log('✅ Modal aberto manualmente!');
                } catch (error) {
                    console.error('❌ Erro ao abrir modal:', error);
                    console.error('Stack trace:', error.stack);
                    alert('Erro ao abrir modal: ' + error.message);
                }
            };
            
            // FUNÇÃO PARA FECHAR MODAL
