        // Atualiza a área de status do diagnóstico (texto objetivo no rodapé do modal)
        function updateDiagnosticStatus(status, detail = '', type = 'info') {
            const el = document.getElementById('diagnosticStatus');
            if (!el) return;
            const colors = {
                info: 'var(--text-secondary)',
                success: '#10b981',
                error: '#ef4444'
            };
            el.style.color = colors[type] || colors.info;
            
            const icons = {
                info: '⏳',
                success: '✅',
                error: '❌'
            };
            const icon = icons[type] || icons.info;
            el.innerHTML = `<strong>${icon} ${status}</strong>${detail ? ' — ' + detail : ''}`;
        }
        
        // Função para adicionar listener ao formulário (SEM onsubmit inline - CSP bloqueava)
        function setupFormListener() {
            const form = document.getElementById('newClientForm');
            if (form) {
                console.log('✅ Formulário encontrado, anexando listener...');
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    console.log('📝 Formulário submetido!');
                    submitNewClient(e);
                });
                console.log('✅ Listener do formulário anexado com sucesso!');
            } else {
                console.warn('⚠️ Formulário newClientForm não encontrado');
            }
        }
        
        // Inicializar funções do modal quando a página carregar
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', function() {
                console.log('✅ DOM carregado, iniciando funções do modal');
                initModalFunctions();
                setupButtonListener();
                setupDiagnosticButton();
                setupFormListener(); // Anexar listener do formulário
            });
        } else {
            // DOM já carregado
            console.log('✅ DOM já carregado, iniciando funções do modal imediatamente');
            initModalFunctions();
            setupButtonListener();
            setupDiagnosticButton();
            setupFormListener(); // Anexar listener do formulário
        }
        
        // Tentar inicializar também quando a janela carregar completamente
        window.addEventListener('load', function() {
            console.log('✅ Window carregada completamente');
            if (typeof window.openNewClientModal !== 'function') {
                console.warn('⚠️ Função ainda não definida após window.load, tentando novamente...');
                initModalFunctions();
            }
            setupButtonListener();
            setupDiagnosticButton();
            setupFormListener(); // Anexar listener do formulário
            
            // Adicionar listener para quando o modal Bootstrap for mostrado
            const modalElement = document.getElementById('newClientModal');
            if (modalElement && typeof bootstrap !== 'undefined') {
                modalElement.addEventListener('shown.bs.modal', function() {
                    console.log('📦 Modal Bootstrap foi mostrado, re-anexando listeners...');
                    setTimeout(() => {
                        setupDiagnosticButton();
                        setupFormListener();
                    }, 100);
                });
            }
        });
        
    </script>

